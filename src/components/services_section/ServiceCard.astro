---
const { label, description, imgPath } = Astro.props;
---

<li style={{ "--img-path": `url(${imgPath})` }}>
  <h3 class="title-1">{label}</h3>
  <div class="content">
    <h3 class="title-2">{label}</h3>
    <p>{description}</p>
  </div>
</li>

<style lang="scss">
  @import "../../styles/breakpoints.scss";

  li {
    position: relative;
    flex-basis: 40%;
    height: 180px;
    padding: 20px;
    background-image: radial-gradient(rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.8)),
      var(--bg-linear), var(--img-path);
    background-size: cover;
    background-position: center;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    transition: all 0.6s cubic-bezier(0.23, 1, 0.32, 1);

    .title-1 {
      color: var(--color-white);
      font-size: 1.4rem;
      text-align: center;
      font-weight: 700;
      letter-spacing: 0.1rem;
      transition: all 0.6s cubic-bezier(0.23, 1, 0.32, 1);
    }

    .content {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%) rotate(-45deg);
      width: calc(100% - 4px);
      height: calc(100% - 4px);
      border-radius: 8px;
      padding: 10px 20px;
      background-color: #fff;
      opacity: 0;
      transition: all 0.6s cubic-bezier(0.23, 1, 0.32, 1);
      overflow-y: auto;

      .title-2 {
        margin: 0 0 10px;
        padding: 0 0 10px;
        font-size: clamp(1rem, 2vw, 1.4rem);
        color: var(--color-dark);
        font-weight: 700;
        border-bottom: 2px solid var(--color-secondary);
      }

      p {
        font-size: 0.9rem;
        color: var(--color-medium);
        line-height: 1.2;
        text-align: justify;
      }
    }
  }

  li:hover {
    transform: rotate(-5deg) scale(1.1);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);

    .content {
      transform: translate(-50%, -50%) rotate(0deg);
      opacity: 1;
    }
  }

  @media only screen and (max-width: $breakpoint-lg) {
    li {
      flex-basis: 48%;
    }
  }

  @media only screen and (max-width: $breakpoint-md) {
    li {
      flex-basis: 64%;
      height: 160px;
      .content {
        p {
          font-size: 0.8rem;
          line-height: 1.2;
        }
      }
    }
  }

  @media only screen and (max-width: $breakpoint-sl) {
    li {
      flex-basis: 80%;
      transform: none;

      .content {
        opacity: 1;
        transform: translate(-50%, -50%) rotate(0deg);
      }
    }
  }

  @media only screen and (max-width: $breakpoint-x-sl) {
    li {
      flex-basis: 100%;
    }
  }
</style>
