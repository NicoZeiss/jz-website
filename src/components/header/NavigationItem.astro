---
const { label, href, target = "_self" } = Astro.props;
---

<li>
  <a href={href} target={target}>{label}</a>
</li>

<style lang="scss">
  @import "../../styles/breakpoints.scss";

  li {
    position: relative;
    padding: 8px 0;

    a {
      text-transform: uppercase;
      font-size: 1.3rem;
      white-space: nowrap;
      letter-spacing: 0.1rem;
      color: var(--color-primary);
      transition: 0.4s;
    }
  }

  li:hover a {
    padding-left: 10px;
    color: var(--color-tertiary);
  }

  @media only screen and (max-width: $breakpoint-lg) {
    li a {
      font-size: 1rem;
    }

    li:hover a {
      padding-left: 8px;
    }
  }
</style>
