---
import { Strings } from "../../constants";
---

<div class="logo">
  <img src="images/logos/logo.png" alt="" />
  <div class="logo__text">
    <h2>{Strings.siteTitle}</h2>
    <p>{Strings.logoBaseline}</p>
  </div>
</div>

<style lang="scss">
  @import "../../styles/breakpoints.scss";

  .logo {
    margin-top: 20px;
    display: flex;
    flex-wrap: nowrap;
    justify-content: flex-start;
    align-items: center;
    gap: 20px;

    img {
      width: 80px;
      flex-shrink: 0;
    }

    .logo__text {
      max-width: 200px;
    }

    h2 {
      font-size: 1.8em;
      letter-spacing: 0.05em;
      white-space: nowrap;
      color: var(--color-primary);
    }

    p {
      font-weight: 700;
      font-size: 0.8em;
      letter-spacing: 0.05em;
      color: var(--color-dark);
    }
  }

  @media only screen and (max-width: $breakpoint-lg) {
    .logo {
      margin-top: 0;

      img {
        width: 50px;
      }

      h2 {
        font-size: 1.2em;
        letter-spacing: 0.02em;
      }

      p {
        font-size: 0.6em;
        letter-spacing: 0.02em;
      }

      .logo__text {
        max-width: 160px;
      }
    }
  }
</style>
