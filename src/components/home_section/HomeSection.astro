---
import { Strings } from "../../constants";
---

<section>
  <div class="content">
    <h2>Bienvenue sur le site de</h2>
    <h1>{Strings.siteTitle}</h1>
  </div>
</section>

<style>
  section {
    position: relative;
    height: 100vh;
    overflow: hidden;
    background-image: var(--bg-radial), var(--bg-linear),
      url(images/backgrounds/bg-home.jpg);
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
    background-attachment: fixed;
  }

  section * {
    /* border: solid 1px red; */
  }

  .content {
    position: fixed;
    top: 50%;
    transform: translateY(-50%);
    max-height: 100%;
    width: 100%;
    padding-left: 70px;
    color: var(--color-white);
  }

  h1,
  h2 {
    font-family: var(--font-cursive);
    font-weight: 500;
  }

  h2 {
    font-size: 2.6rem;
  }

  h1 {
    font-size: 10rem;
  }
</style>
